<article{% if post.url == url %} data-current="current item" {% endif %}>
	{# Starting Blog List Template #}
	<section class="text-gray-700 body-font overflow-hidden">
		<div class="container px-5 py-24 mx-auto">
			<div class="-my-8">
				{% for post in postslist | reverse %}
				<div class="py-8 flex flex-wrap md:flex-no-wrap">
					<div class="md:w-64 md:mb-0 mb-6 flex-shrink-0 flex flex-col">
						<span class="tracking-widest font-medium title-font text-gray-900">CATEGORY</span>

						{% if post.data.tags %}
						<p>
							{% for tag in post.data.tags %}
							{%- if tag != "post" -%}
							{% set tagUrl %}/tags/{{ tag }}/{% endset %}
							<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
							{%- endif -%}
							{% endfor %}
						</p>
						{% endif %}
						<span class="mt-1 text-gray-500 text-sm"><time datetime="{{ post.date | machineDate }}">
								<small>{{ post.date | readableDate }} </time>
							<p>
								by
								<a href="/authors/{{ post.data.author | slug }}/">{{ post.data.author }}</a>
								</small>

							</p>
						</span>
					</div>
					<div class="md:flex-grow">
						<h2 class="text-2xl font-medium text-gray-900 title-font mb-2"><a href="{{ post.url | url }}">
								{% if post.data.title %}
								{{ post.data.title }}
								{% else %}
								Untitled
								{% endif %}
							</a></h2>
						{% if post.data.summary %}

						<p class="leading-relaxed"> {{ post.data.summary }}
						</p>
						{% endif %}

						<a class="text-pink-500 inline-flex items-center mt-4" href="{{ post.url | url }}">Read
							More
							<svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"
								fill="none" stroke-linecap="round" stroke-linejoin="round">
								<path d="M5 12h14"></path>
								<path d="M12 5l7 7-7 7"></path>
							</svg>
						</a>
					</div>
				</div>
				{% endfor %}
			</div>
		</div>
	</section>

	{# Ending Blog List Template #}
	</article>
	</section>