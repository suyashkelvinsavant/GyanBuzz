---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
permalink: /tags/{{ tag }}/
layout: layouts/base.njk
renderData:
  title: "Search Results for “ {{ tag }} ”"
---

<h1 class="bg-black text-center text-xl text-pink-600">Search Results For  {{ tag | upper}} </h1>

{% set postslist = collections[ tag ] %}
{% include "components/postslist.njk" %}

<nav>
  <a href="{{ '/' | url }}">← Blog index</a>
</nav>
